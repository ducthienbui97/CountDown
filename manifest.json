{
  "name": "Count Down",
  "description": "Count down to a specific moment of the day",
  "manifest_version": 2,
  "version": "0.2",
  "app": {
    "background": {
      "scripts": ["main.js"]
    }
  },
  "icons": {
    "16": "img/clock.png",
    "64": "img/clock.png",
    "128": "img/clock.png"
  },
  "permissions": [
    "geolocation",
    "background",
    "storage" 
  ]
}
